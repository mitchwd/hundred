%h1= "Welcome " + @user.name if @user.name

%h3 Your Stories
%table
  %tbody
    - if @user.stories.empty?
      %p You haven't shared any stories yet! 
      %br
      = link_to 'Write a new story', new_story_path, class: 'button'
    - else 
      - @user.stories.each do |story|
        %tr
          %td= link_to truncate(story.content, length: 65), story
          %td= time_ago_in_words(story.created_at) + " ago"
          %td= link_to "Edit", edit_story_path(story)
          %td= link_to 'Destroy', story, :method => :delete, :data => { :confirm => 'Are you sure?' }
%br

.dangerzone
  = link_to "Delete my account", user_destroy_path, :method => :delete, :data => { :confirm => "We're sorry to see you go. Once you delete an account, there is no going back- your account, and all associated stories will be deleted." }





